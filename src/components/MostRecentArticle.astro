---
import { type CollectionEntry } from 'astro:content';
import { formatDate } from '../utils';

const { blog } = Astro.props;

interface Props {
  blog: CollectionEntry<'blog'>;
}
---

<div class="relative inline-block w-full sm:w-auto cursor-pointer rounded-2xl">
  <a href={'/article/' + blog.slug}>
    <img
      src={'/images/' + blog.data.image}
      alt="Article Image"
      class="w-full h-auto rounded-2xl"
    />

    <div
      class="absolute inset-0 flex flex-col items-center justify-center bg-black opacity-80 hover:opacity-75 transition duration-300 ease-in-out text-white text-center rounded-2xl"
    >
      <div>
        <h2 class="text-2xl font-semibold sm:text-3xl">
          {blog.data.title}
        </h2>
        <p class="text-xl mt-4">{formatDate(blog.data.pubDate)}</p>

        <!-- Tags with rounded border -->
        <div class="flex mt-4 justify-center">
          {
            blog.data.tags.map((tag: string) => (
              <span class="px-2 py-1 border text-white rounded-full text-xs mr-2">
                {tag}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
